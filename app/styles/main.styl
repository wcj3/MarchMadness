//Google font
//ADD COOL IMAGES AT TOP FOR EACH REGION
//CSS Color for each school
*
  font-family: 'Titillium Web', sans-serif
#header
  height 114px
  width auto
  background-color white
  z-index 2
//March Madness logo
#madness
  margin-left auto
  margin-right auto
  display block
.search-bar
  display block
  margin-left auto
  margin-right auto
  position relative
  top 100px
//Background color for bracket
#bracket
  background rgba(105, 105, 105, 0.69)
.left-round1
  position relative
  display inline-block
  left 20px
  width 241px
  margin 0
  padding 0
.right-round1
  position: absolute;
  display: inline-block;
  right: 20px;
  width: 241px;
  margin: 0;
  padding: 0;
  top: 144px;
.lower-right-round1
  position: absolute;
  display: inline-block;
  right: 20px;
  width: 241px;
  margin: 0;
  padding: 0;
  top: 1192px;
.game
  border 1px solid black
  width 200px
  margin 30px 0px
  position relative
  background-color white
  border-radius 5px
  display inline-block
.seed
  padding-right 10px
  padding-left 4px
.team
  padding 5px 0
.game > .top
  border-bottom thin solid black
.score
  position absolute
  right 4px
//Sets connector for round 1
.left-round1 > .game > .connector
  border 1px solid black
  border-left none
  z-index -1
  position absolute
  height 130px
  width 230px
  display block
  top 34px
#round2 > .game
  position absolute
  left 246px
  top 81px
  z-index 1
.winner
  color green
.loser
  color red
.win-icon
  background url(http://localhost:9000/images/party-emoji.png)
  height 24px
  width 24px
  background-size contain
  background-repeat no-repeat
  display inline-block
  vertical-align middle
  right 43px
  position absolute
