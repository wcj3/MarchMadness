region-right-spacing = 20px
even-point = 48px
nav-width = 73
app-width = 1200px
*
  font-family: 'Titillium Web', sans-serif
#home
  height 114px
  width auto
//March Madness logo
#madness
  margin-left auto
  margin-right auto
  display block
//
.match
  background-color rgb(238, 216, 101)
.match.top
  border-radius 5px 5px 0 0
.match.bottom
  border-radius 0 0 5px 5px
//nav styling
.nav
  position absolute
  font-weight bold
  letter-spacing .5px
  font-size 17px
.bracket-nav
  width 100%
  position relative
  top -70px
  height 34px
.bracket-nav-scroll
  position fixed !important
  top 0 !important
  width app-width !important
  z-index 3
  background black
  color white
.bracket-nav-scroll > .nav
  padding 5px 0
//Round styling
.round1
  left 20px + ((171 - nav-width) / 2) px
.round2
  left 206 + ((171 - nav-width) / 2) px
.sweet16
  left 302 + ((171 - nav-width) / 2) px
.elite8
  left 578px
.round1-right
  right  20px + ((171 - nav-width) / 2) px
.round2-right
  right 206 + ((171 - nav-width) / 2)px
.sweet16-right
  right 302 + ((171 - nav-width) / 2)px
//
.button-wrap
  text-align center
  display block
  position relative
  margin-left auto
  margin-right auto
  z-index 2
  top 180px
#bracket
  position relative
  margin-top 150px
  width app-width
  margin 0 auto
  top 180px
.container
  background rgba(170, 170, 170, .90)
  width app-width
  height 2800px
  margin 0 auto
  position relative
//Background color for bracket
body
  background url(../images/background.jpg)
  background-size 2200px 3000px !important
.west .round-1, .south .round-1
  left 20px
//Round styling
.region.west
  top region-top-spacing
  position absolute
.region.midwest
  top region-top-spacing
  position absolute
  right 0
.midwest .round-1
  right region-right-spacing
.east .round-1
  right region-right-spacing
  position absolute
#eastRound2, #midwestRound2
  right round2-spacing !important
#southRound2, #westRound2
  left round2-spacing !important
#eastSweet16, #midwestSweet16
  right sweet16-spacing !important
#southSweet16, #westSweet16
  left sweet16-spacing !important
#eastElite8, #midwestElite8
  right elite8-spacing !important
#southElite8, #westElite8
  left elite8-spacing !important
.round
  position absolute
  display inline-block
  margin 0
  padding 0
  width 171px
  top 0
.round-2
  top 48px !important;
.round-2 > .game
  margin 95.50px  0
.round-16  > .game
  margin 269px 0 183px 0
.round-8 > .game
  margin 512.50px 0
.final-4
  top 955.5px
  left 334px
  position absolute
.final-4 > img
  height 300px
  width 300px
  display block
  margin 0 auto
.final-4 > .game
  margin 0 5px
.final-4 > div + div
  float right
.final-4 > div + div > h4, .final-4 > div > h4
  position: absolute;
  top: -50px;
  left: 56px;
.final-4 > div + div + div > h4
  position: absolute;
  top: -50px;
  left: 38px;
.final-4 > div + div + div
  bottom 35px
//Game styling
.game
  border 1px solid black
  width 169px
  margin 30px 0px
  position relative
  background-color white
  border-radius 5px
  display inline-block
.seed
  padding-right 3px
  padding-left 3px
.team
  padding 5px 0
.game > .top
  border-bottom thin solid black
.score
  position absolute
  right 4px
//Styling for connectors
.connector
  border 1px solid black
  position absolute
  display block
.south .connector, .west .connector
  width 185px
  border-left none
  top 34px
.midwest .connector, .east .connector
  border-right none
  width 165px
  right 20px
  top 34px
.round-1 .connector
  height 130px
.round-2 .connector
  height 261px
.round-16 .connector
  height 522px
.round-8 .connector
  height 390px
  border-bottom none
.west .round-8 .connector, .midwest .round-8 .connector
  top -356px
  border-bottom inherit
  border-top none
.winner
  color green
.loser
  color red
.win-icon
  background url(../images/party-emoji.png)
  height 24px
  width 24px
  background-size contain
  background-repeat no-repeat
  display inline-block
  vertical-align middle
  right 29px
  position absolute
.natty
  background url(../images/champ-emoji.png)
  height 24px
  width 24px
  background-size contain
  background-repeat no-repeat
  display inline-block
  vertical-align middle
  right 29px
  position absolute
.region
  display inline-block
.round-1
  margin-bottom 50px
.region h1
  display inline
.south h1
  color rgb(242, 57, 69)
.west h1
  color rgb(0, 131, 226)
.east h1
  color rgb(4, 150, 5)
.midwest h1
  color rgb(250, 135, 0)
